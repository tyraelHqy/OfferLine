<view> 云数据库 </view>
<button class="btn1" bindtap="insert">插入数据</button>
<button class="btn1" bindtap="update">更新数据</button>
<button class="btn1" bindtap="search">查找数据</button>
<button class="btn1" bindtap="delete">删除数据</button>

<view> 云函数 </view>
<button class="btn1" bindtap="sum">调用云函数sum</button>
<button class="btn1" bindtap="getOpenID">获取用户的openid</button>
<button class="btn1" bindtap="deleteBatch">批量删除数据</button>

<view> 云存储 </view>
<button class="btn1" bindtap="uploadImage">上传图片</button>
<button class="btn1" bindtap="getFile">文件展示</button>
<block  wx:for="{{images}}">
  <image src="{{item.fileID}}"></image>
  <button size="mini" data-fileID="{{item.fileID}}" bindtap="downloadFile"> 文件下载 </button>
</block>